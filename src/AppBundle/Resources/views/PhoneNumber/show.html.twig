<h2 class="well">{{ phone_owner.number }}</h2>

<div class="row">
    <div class="col-md-4">
        <h3>{{ 'contacts'|trans }}</h3>
        <ul class="nav nav-pills nav-stacked">
            {% for item in contacts_and_operations %}
                <li>
                    <a href="#contact-{{ item.contact.id }}">
                        {{ item.contact.name ? item.contact.name : 'unknown_contact'|trans }} ({{ item.contact.number }})
                    </a>
                </li>
            {% endfor %}
        </ul>
    </div>
    <div class="col-md-8">
        {% for item in contacts_and_operations %}
            <div class="panel panel-default" id="contact-{{ item.contact.id }}">
                <div class="panel-heading">
                    {{ item.contact.name ? item.contact.name : 'unknown_contact'|trans }} ({{ item.contact.number }})
                </div>
                <div class="panel-body">
                    <table class="table table-striped">
                        <thead>
                        <th>{{ 'type'|trans }}</th>
                        <th>{{ 'direction'|trans }}</th>
                        <th>{{ 'date'|trans }}</th>
                        <th>{{ 'duration'|trans }}</th>
                        </thead>
                        <tbody>
                        {% for operation in item.operations %}
                            <tr>
                                <td>
                                    <span class="label label-primary">{{ operation.getType() }}</span>
                                </td>
                                <td>{{ 'direction-' ~ operation.direction | trans }}</td>
                                <td>{{ operation.date|date('d/m/Y H:i:s') }}</td>
                                <td>{{ operation.type == 'call' ? operation.duration : '' }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        {% endfor %}
    </div>
</div>




